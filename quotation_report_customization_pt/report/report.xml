<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--All costs can be printed in the Production Order Costing report./-->
        <record id="action_report_saleorder_new" model="ir.actions.report">
            <field name="name">Quotation / Order New</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">quotation_report_customization_pt.report_saleorder</field>
            <field name="report_file">quotation_report_customization_pt.report_saleorder</field>
            <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
